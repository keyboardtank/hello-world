# This program asks of a given shape, and then calculates the area of such shape
print("Calculator is running...")
option = raw_input("Enter C for Circle or T for Triangle: ")
if option == 'C':
  radious = float(raw_input("Input radious: "))
  pi = 3.14159
  area = (pi * (radious**2))
  print(str(area))
elif option == "T":
    base = float(raw_input("Input triangle base: "))
    height = float(raw_input("Input triangle height "))
    area2 = (0.5 * base * height)
    print(str(area2))
else:
  print("Error: Invaled shape entered")
print("Calculator exiting...")
